# Generated by Ansible

[mysqld]

# GENERAL #
user                           = {{ percona_db_user }}
default_storage_engine         = {{ percona_default_storage_engine }}


# SAFETY #
max_allowed_packet             = 16M
max_connect_errors             = 1000000
slave_transaction_retries      = 60

# DATA STORAGE #
datadir={{ percona_data_dir }}

# BINARY LOGGING #
log_bin                        = {{ percona_bin_log }}
expire_logs_days               = 14
sync_binlog                    = {{ percona_server_sync_binlog }}
binlog_format                  = ROW

# CACHES AND LIMITS #
tmp_table_size                 = 32M
max_heap_table_size            = 32M
query_cache_type               = 0
query_cache_size               = 0
max_connections                = 500
thread_cache_size              = 50
open_files_limit               = 65535
table_definition_cache         = 4096
table_open_cache               = 4096

# INNODB #
innodb_flush_method            = O_DIRECT
innodb_log_files_in_group      = 2
innodb_log_file_size           = 512M
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table          = 1
innodb_buffer_pool_size        = {{ percona_innodb_buffer_pool_size }}

# Added after percona suggestion
innodb_old_blocks_time=1000
innodb_buffer_pool_instances=8
innodb_adaptive_flushing_method=keep_average
innodb_flush_neighbor_pages=none
innodb_read_ahead = none

# LOGGING # percona_server_log_dir
log_error                      = {{ percona_error_log }}
log_queries_not_using_indexes  = 1
slow_query_log                 = 1
slow_query_log_file            = {{ percona_slow_log }}

# Custom Parameters
transaction-isolation = READ-COMMITTED


read-only        = {{ percona_mysql_read_only }}

# replication
server_id={{ percona_mysql_server_id }}
skip-slave-start
relay-log = {{ percona_relay_log }}
log-slave-updates
relay-log-recovery = 1
